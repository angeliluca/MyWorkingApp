<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".SimpleContactListActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_activity_title_textView"
        android:layout_centerHorizontal="true"
        android:text="cl_activity_title"
        android:textAlignment="center"
        android:layout_marginTop="67dp"/>
    <TextView android:id="@+id/activity_subtitle_textView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:text="cl_activity_subtitle"
        android:textAlignment="center"
        android:layout_below="@+id/cl_activity_title_textView"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_name_editText"
        android:layout_below="@+id/activity_subtitle_textView"
        android:hint="cl_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_phone_editText"
        android:layout_below="@+id/cl_name_editText"
        android:layout_centerHorizontal="true"
        android:hint="cl_phone"
        android:inputType="phone"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/cl_email_editText"
        android:layout_below="@+id/cl_phone_editText"
        android:layout_centerHorizontal="true"
        android:hint="cl_email"
        android:inputType="textEmailAddress"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cl_button"
        android:layout_below="@+id/cl_email_editText"
        android:layout_centerHorizontal="true"
        android:text="Salva!"
        />

</RelativeLayout>

